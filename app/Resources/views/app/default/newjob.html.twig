{% extends ':app:base.html.twig' %}
{% trans_default_domain 'AppBundle' %}
{% block page_h1 %}
        {{ 'newjob.page_h1'|trans }}
    {% endblock %}

{% block body %}
    {{ form_start(form, {'method': 'post', 'action': path('submitjob')}) }}
    <div class="form-group">
        {{ form_label(form.video.file, 'newjob.form.file'|trans, {'attr': {'class': 'control-label'}}) }}
        <input type="text" readonly="" class="form-control" placeholder="Browse...">
        {{ form_widget(form.video.file, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.targetFormat, 'newjob.form.targetformat'|trans, {'attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.targetFormat, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_widget(form.save, {'attr': {'class': 'btn teal white-text'}}) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}