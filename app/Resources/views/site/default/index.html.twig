{% trans_default_domain 'SiteBundle' %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Transcode - Home{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="{{ asset('css/site.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block menu %}
    {{ render(controller("SiteBundle:Default:menu")) }}
{% endblock %}
<div class="body-content index">
    <img width="100%" src="{{ asset('images/background-1.jpg') }}" alt="">
    <div class="container">
    <div class="text-center">
        <h1 class="blue-text"><strong>Pricing Guide</strong></h1>
        <h3 class="grey-text">Transcode is free to use for as long as you want, for teams of all sizes.</h3>
    </div>
    <br>
    <div class="row">
