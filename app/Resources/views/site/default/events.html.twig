        </div>

        <div class="col-xs-4 event">
            <div class="col-xs-6 event-left">
                <img src="{{ asset('images/event/34festival.jpg') }}" alt="">
            </div>
            <div class ="col-xs-6 event-right">
                <img src="{{ asset('images/event/JAZZ.jpg') }}" alt="">
            </div>
            <img src="{{ asset('images/event/laroutedurock.jpg') }}" alt="">
            <img src="{{ asset('images/event/nuitsSonore.jpg') }}" alt="">
        </div>

        <div class="col-xs-4 event">
            <img src="{{ asset('images/event/portlatino.jpg') }}" alt="">
            <img src="{{ asset('images/event/rockenseine.jpg') }}" alt="">
            <img src="{{ asset('images/event/alorsChante.jpg') }}" alt="">
        </div>
    </div>




{% endblock %}
